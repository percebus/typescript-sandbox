{
  "lib": ["es2015"],
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs", // Node uses commonjs.
    "esModuleInterop": true,
    "moduleResolution": "node", // mimics the Node module resolution mechanism.
    "sourceMap": true,
    "outDir": "dist" // This is the location to output .js files after transpilation.
  }
}
