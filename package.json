{
  "name": "typescript-sandbox",
  "version": "0.1.0",
  "description": "TypeScript SandBox/PlayGround",
  "main": "dist/app.js",
  "scripts": {
    "npm:install:global": "npm install -g standard",
    "setup": "npm run npm:install:global",
    "setup:ci": "npm run setup",
    "ts-standard": "ts-standard src/**/*.ts --fix",
    "lint": "npm run ts-standard",
    "test": "echo \"Error: no test specified\" && exit 1",
    "FIXMEprebuild": "npm run ts-standard",
    "build": "npx tsc",
    "app": "node .",
    "prestart": "npm run build",
    "start": "npm run app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percebus/typescript-sandbox.git"
  },
  "keywords": [
    "TypeScript",
    "node",
    "tests",
    "examples",
    "samples"
  ],
  "author": "percebus",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/percebus/typescript-sandbox/issues"
  },
  "homepage": "https://github.com/percebus/typescript-sandbox#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.3",
    "ts-jest": "^27.1.3",
    "ts-standard": "^11.0.0",
    "typescript": "~4.4.0"
  },
  "dependencies": {
    "@types/mocha": "^9.1.0"
  }
}
